@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<h1>@ViewData["Title"]</h1>

<h2>Forgot your password?</h2>
<p>Enter your email address below, and we'll send you a link to reset your password.</p>

<form id="forgotPasswordForm">
    <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Send Reset Link</button>
</form>

<script>
    document.getElementById('forgotPasswordForm').addEventListener('submit', async function (e) {
        e.preventDefault();

        const email = document.getElementById('email').value;

        console.log('Submitting form:', { email });

        // Here you would normally send a request to your API to initiate the password reset process.
        // Since you haven't integrated the backend yet, we'll just log a message to the console.
        console.log('Password reset link sent to:', email);
    });
</script>
